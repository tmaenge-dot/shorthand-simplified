{
  "expo": {
    "name": "Shorthand Simplified",
    "slug": "shorthand-simplified",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "shorthandsimplified",
    "userInterfaceStyle": "automatic",
    "description": "Master Pitman shorthand writing - Learn strokes, shortforms, phrases & outlines. Perfect for students, professionals & stenographers. Improve note-taking speed with comprehensive lessons, practice exercises & visual guides. Free to start!",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/images/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.shorthandsimplified.app",
      "buildNumber": "1"
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#E6F4FE",
        "foregroundImage": "./assets/images/android-icon-foreground.png",
        "backgroundImage": "./assets/images/android-icon-background.png",
        "monochromeImage": "./assets/images/android-icon-monochrome.png"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "package": "com.shorthandsimplified.app",
      "versionCode": 1,
      "permissions": [
        "com.android.vending.BILLING"
      ],
      "playStoreUrl": "https://play.google.com/store/apps/details?id=com.shorthandsimplified.app"
    },
    "web": {
      "output": "static",
      "bundler": "metro",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff",
          "dark": {
            "backgroundColor": "#000000"
          }
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true,
      "baseUrl": "/shorthand-simplified"
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "e66fce43-9f41-4bf5-9e37-d8231236a950"
      },
      "PAYPAL_CLIENT_ID": "AUbVu5Ik8BzHXAQbJBgP_..."
    }
  }
}
